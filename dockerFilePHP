FROM php:8.1-fpm 

ADD https://github.com/mlocati/docker-php-extension-installer/releases/latest/download/install-php-extensions /usr/local/bin/

RUN chmod +x /usr/local/bin/install-php-extensions && \
    install-php-extensions xdebug mcrypt imagick pdo_mysql pdo_mysql redis memcached

# https://gist.github.com/giansalex/2776a4206666d940d014792ab4700d80
# PHP for Nextcloud https://docs.nextcloud.com/server/25/admin_manual/installation/source_installation.html

RUN install-php-extensions ctype curl dom fileinfo gd json libxml mbstring posix simplexml xmlreader xmlwriter zip zlib session
